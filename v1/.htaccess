#Options +FollowSymlinks
RewriteEngine On
RewriteBase /
DirectoryIndex /index.php

# Redirect index to the root of www
RewriteRule ^(.*)index(.*)$ http://v1.dwaan.com/ [L,R=301]
RewriteRule ^$ http://v1.dwaan.com/ [L,R=301]


# Unless directory, remove trailing slash
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^/]+)/$ http://v1.dwaan.com/$1 [R=301,L]


# Redirect external .php requests to extensionless URL
RewriteCond %{THE_REQUEST} ^(.+)\.php([#?][^\ ]*)?\ HTTP/
RewriteRule ^(.+)\.php$ http://v1.dwaan.com/$1 [R=301,L]

# Resolve .php file for extensionless PHP URLs
RewriteRule ^([^/.]+)$ $1.php [L]

# 404 and 500
ErrorDocument 404 http://v1.dwaan.com/404
ErrorDocument 500 http://v1.dwaan.com/404